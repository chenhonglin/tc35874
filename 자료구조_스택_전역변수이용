#include "pch.h"
#include <stdio.h>
#include <stdlib.h>

#define MAX_STACK_SIZE 100
typedef int element;
element stack[MAX_STACK_SIZE];
int top = -1;

//공백 상태 검출 함수
int empty() {
	return (top == -1);
}

//포화 상태 검출 함수
int full() {
	return (top == (MAX_STACK_SIZE - 1));
}

//삽입 함수
void push(element item) {
	if (full()) {
		fprintf(stderr, "스택 포화 에러\n");
		return;
	}
	else stack[++top] = item;
}

element pop() {
	if (empty()) {
		fprintf(stderr, "스택 공백 에러\n");
		exit(1);
	}
	else return stack[top--];
}

//피크 함수
element peek() {
	if (empty()) {
		fprintf(stderr, "스택 공백 에러\n");
		exit(1);
	}
	else return stack[top];
}
int main() {
	push(1);
	push(2);
	push(3);
	printf("%d\n", peek());
	printf("%d\n", pop());
	printf("%d\n",pop());

	return 0;

}
