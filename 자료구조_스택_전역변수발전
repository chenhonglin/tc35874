#include "pch.h"
#include <stdio.h>
#include <stdlib.h>

#define MAX_STACK_SIZE 100

typedef int element;
typedef struct {
	element data[MAX_STACK_SIZE];
	int top;
}StackType;

//스택 초기화 함수
void init_stact(StackType *S) {
	S->top = -1;
}

//공백 상태 검출
int empty(StackType *S) {
	return (S->top == -1);
}

//포화 상태 검출
int full(StackType *S) {
	return (S->top == (MAX_STACK_SIZE - 1));
}

//삽입함수
void push(StackType *S, element item) {
	if (full(S)) {
		printf("스택 포화 에러\n");
		return;

	}
	else S->data[++(S->top)] = item;
}

element pop(StackType *S) {
	if (full(S)) {
		printf("스택 공백 에러\n");
		exit(1);
	}
	else return S->data[(S->top)--];
}

//피크 함수
element peek(StackType *S) {
	if (empty(S)) {
		printf("스택 공백 에러\n");
		exit(1);
	}
	else return S->data[S->top];
}
int main() {
	
	StackType s;
	init_stact(&s);
	push(&s, 1);
	push(&s, 2);
	printf("%d\n", pop(&s));
	printf("%d\n", pop(&s));
}
