#include "pch.h"
#include<iostream>
#include<algorithm>
#include<ctime>
#include<cmath>
using namespace std;


int Number[10];
int num1, num2, num3;
int strike, ball, out;


void Input_Num() {
	cin >> num1 >> num2 >> num3;
}

void Judge() {
	if (num1 == Number[0])
		strike++;
	else if (num1 == Number[1])
		ball++;
	else if (num1 == Number[2])
		ball++;
	else
		out++;

	if (num2 == Number[1])
		strike++;
	else if (num2 == Number[0])
		ball++;
	else if (num2 == Number[2])
		ball++;
	else
		out++;

	if (num3 == Number[2])
		strike++;
	else if (num3 == Number[0])
		ball++;
	else if (num3 == Number[1])
		ball++;
	else
		out++;
}

void Init() {
	strike = 0;
	ball = 0;
	out = 0;
}

int main()
{
	srand((unsigned int)time(0));

	//0~9까지의 숫자
	for (int i = 0; i < 10; i++) {
		Number[i] = i;
	}

	//중복된 숫자를 없애기 위한 셔플
	int temp, idx1, idx2;
	for (int i = 0; i < 100; i++) {
		idx1 = rand() % 10;
		idx2 = rand() % 10;

		temp = Number[idx1];
		Number[idx1] = Number[idx2];
		Number[idx2] = temp;
	}

	cout << "숫자 야구를 시작합니다." << endl;
	
	cout << "0 ~ 9의 숫자 3개를 입력 하시오" << endl;
	int cnt = 1;
	while (1) {

		//숫자 입력 하기
		Input_Num();

		//입력한 숫자에 대해 판정하기
		Judge();
		
		//strike가 3개이면 성공
		if (strike == 3) {
			for (int i = 0; i < 3; i++) {
				cout << Number[i] << ' ';
				
			}
			cout << "정답입니다." << endl;
			break;
		}

		cout << "strike : " << strike << ' ' << "ball : " << ball << ' ' << "out : " << out << endl;

		//판정을 초기화
		Init();
		cnt++;
	}
	cout << cnt << "번 만에 성공했습니다." << endl;
	cout << "The end" << endl;
	

	return 0;
}
