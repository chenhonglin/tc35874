// LinkedList.cpp : 이 파일에는 'main' 함수가 포함됩니다. 거기서 프로그램 실행이 시작되고 종료됩니다.
//

#include "pch.h"
#include<stdio.h>
#include<stdlib.h>
#pragma warning(disable : 4996)

typedef struct _NODE {
	int Data;
	struct _NODE *Next;
}NODE;

NODE* Insert_First(NODE *head, int value) {
	NODE *p = (NODE*)malloc(sizeof(NODE));
	p->Data = value;
	p->Next = head;
	head = p;

	return head;
}

NODE* Insert_Value(NODE *head, NODE *pre, int value) {
	NODE *p = (NODE*)malloc(sizeof(NODE));
	p->Data = value;
	p->Next = pre->Next;
	pre->Next = p;

	return head;
}



NODE* Delete_First(NODE *head) {
	NODE *remove;
	if (head == NULL) return NULL;
	remove = head->Next;
	head = remove->Next;
	free(remove);
	return head;
}

NODE* Delete_Node(NODE *head, NODE *pre) {
	NODE *remove;
	remove = pre->Next;
	pre->Next = remove->Next;
	free(remove);

	return head;
}

void SHOW(NODE *head) {
	NODE *p;
	for (p = head; p != NULL; p = p->Next) {
		printf("%d->", p->Data);
	}
	printf("NULL\n");
}
int main()
{
	NODE *head = NULL;

	int x, i;
	while (1) {
		printf("정수 입력(0입력 시 종료):");
		scanf("%d", &x);
		if (x == 0)break;
		head = Insert_First(head, x);
	}
	SHOW(head);

	head=Delete_First(head);

	SHOW(head);
	return 0;
}

